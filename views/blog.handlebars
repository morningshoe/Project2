<!DOCTYPE html>
<html>
<head>
   <meta charset="UTF-8">
    <title>Imgur-Upload</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="../public/css/style.css" rel="stylesheet" media="screen">
    <link href="../public/css/mobile-style.css" rel="stylesheet" media="screen">
</head>
<body>
<form>
  <div class="form-group row">
    <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">Email</label>
    <div class="col-sm-10">
      <input type="email" class="form-control form-control-sm" id="colFormLabelSm" placeholder="col-form-label-sm">
    </div>
  </div>

  <div class="form-group">
    <label for="exampleFormControlTextarea1">Example textarea</label>
    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
  </div>
</form>
<form id="imgur">
  <input type="file" class="imgur" accept="image/*" data-max-size="5000"/>
</form>
<div class="title">
        <h1>Imgur Upload API</h1>
        <p>Use JavaScript To Upload Image</p>
    </div>
  <div class="dropzone">
      <div class="info"></div>
  </div>
     <script type="text/javascript" src="../public/js/imgur.js"></script>
    <script type="text/javascript" src="../public/js/upload.js"></script>
</body>

</html>


